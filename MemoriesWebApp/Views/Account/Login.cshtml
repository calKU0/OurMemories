@model MemoriesWebApp.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
}
<div class="form-signin w-100 h-100 d-flex flex-column align-items-center justify-content-center" style="min-height: 80vh;">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <img class="mb-4" src="https://upload.wikimedia.org/wikipedia/commons/thumb/b/b2/Bootstrap_logo.svg/512px-Bootstrap_logo.svg.png" alt="" width="72" height="57">
            <p class="h1 mb-3 fw-bold justify-content-start">Zaloguj się &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</p>
            <div class="form-floating">
                <input asp-for="EmailAddress" type="email" class="form-control" id="floatingInput">
                <label asp-for="EmailAddress">Adres e-mail</label>
                <span asp-validation-for="EmailAddress" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Password" type="password" class="form-control" id="floatingPassword">
                <label asp-for="Password">Hasło</label>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <!-- <div class="form-check text-start my-3">
                <input class="form-check-input" type="checkbox" value="remember-me" id="flexCheckDefault">
                <label class="form-check-label" for="flexCheckDefault">
                    Remember me
                </label>
            </div>-->
            @if (TempData["LoginError"] != null)
            {
                <div class="col-md-12 alert alert-danger">
                    <span><b>Sorry!</b> - @TempData["LoginError"]</span>
                </div>
            }
            <div class="btn-group gap-1 py-2">
                <a class="btn btn-outline-secondary w-50" onclick="history.back()">Powrót</a>
                <input class="btn btn-primary w-100" type="submit" value="Zaloguj"/>
            </div>
        </form>
    </div>

