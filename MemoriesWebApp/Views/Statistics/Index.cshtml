
@model List<MemoriesWebApp.ViewModels.StatisticsViewModel>
@{
    var AvgTimeSpent = (Math.Floor(Model.First().AvgMeetingTime / 24)).ToString() + " dni " + (Math.Round(Model.First().AvgMeetingTime) - Math.Floor(Model.First().AvgMeetingTime / 24) * 24).ToString() + " godzin";
    var longestMeetingTime = Math.Floor((Model.First().Meetings[0].DateEnd - Model.First().Meetings[0].DateStart).TotalDays).ToString() + " dni " + ((Model.First().Meetings[0].DateEnd - Model.First().Meetings[0].DateStart).TotalHours - Math.Floor(((Model.First().Meetings[0].DateEnd - Model.First().Meetings[0].DateStart).TotalDays) * 24)).ToString() + " godzin";
    var firstMeetingTime = Math.Floor((Model.First().Meetings[1].DateEnd - Model.First().Meetings[1].DateStart).TotalDays).ToString() + " dni " + ((Model.First().Meetings[1].DateEnd - Model.First().Meetings[1].DateStart).TotalHours - Math.Floor(((Model.First().Meetings[1].DateEnd - Model.First().Meetings[1].DateStart).TotalDays) * 24)).ToString() + " godzin";
    var lastMeetingTime = Math.Floor((Model.First().Meetings[2].DateEnd - Model.First().Meetings[2].DateStart).TotalDays).ToString() + " dni " + ((Model.First().Meetings[2].DateEnd - Model.First().Meetings[2].DateStart).TotalHours - Math.Floor(((Model.First().Meetings[2].DateEnd - Model.First().Meetings[2].DateStart).TotalDays) * 24)).ToString() + " godzin";
}

<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Wynik</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <th scope="row">Średni czas spotkań</th>
            <td>@AvgTimeSpent</td>
        </tr>
        <tr>
            <th scope="row">Srednio zdjęć na spotkanie</th>
            <td>@Model.First().AvgPicturesTaken</td>
        </tr>
        <tr>
            <th scope="row">Spotkanie z największą ilością zdjęć</th>
            <td><a asp-controller="Meeting" asp-action="Details" asp-route-id="@Model.First().MeetingMostPictures">@Model.First().MeetingMostPictures</a></td>
        </tr>
    </tbody>
</table>

<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Data</th>
            <th scope="col">Miejscowość</th>
            <th scope="col">Czas spotkania</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <th scope="row">Najdłuższe Spotkanie</th>
            <td>@Model.First().Meetings[0].DateStart</td>
            <td>@Model.First().Meetings[0].MeetingCity</td>
            <td>@longestMeetingTime</td>
            <td><a asp-controller="Meeting" asp-action="Details" asp-route-id="@Model.First().Meetings[0].Id">Zobacz więcej</a></td>
        </tr>
        <tr>
            <th scope="row">Pierwsze Spotkanie</th>
            <td>@Model.First().Meetings[1].DateStart</td>
            <td>@Model.First().Meetings[1].MeetingCity</td>
            <td>@firstMeetingTime</td>
            <td><a asp-controller="Meeting" asp-action="Details" asp-route-id="@Model.First().Meetings[1].Id">Zobacz więcej</a></td>
        </tr>
        <tr>
            <th scope="row">Ostatnie spotkanie</th>
            <td>@Model.First().Meetings[2].DateStart</td>
            <td>@Model.First().Meetings[2].MeetingCity</td>
            <td>@lastMeetingTime</td>
            <td><a asp-controller="Meeting" asp-action="Details" asp-route-id="@Model.First().Meetings[2].Id">Zobacz więcej</a></td>
        </tr>
    </tbody>
</table>