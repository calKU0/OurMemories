            </tr>
        </thead>
        <tbody>
            <tr>
                <th class="align-middle" scope="row"><a asp-controller="Meeting" asp-action="Details" asp-route-id="@Model.Meetings[1].Id">Najdłuższe Spotkanie</a></th>
