    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="deleteModalLabel">Brak odpowiednich uprawnień</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row align-items-center justify-content-center p-2">
                    <div class="col-auto">
                        <svg class="bi mt-2 mb-2" style="color: red;" width="50" height="50">
                            <svg xmlns="http://www.w3.org/2000/svg" width="50" height="50" fill="currentColor" class="bi bi-shield-lock" viewBox="0 0 16 16">
                                <path d="M5.338 1.59a61 61 0 0 0-2.837.856.48.48 0 0 0-.328.39c-.554 4.157.726 7.19 2.253 9.188a10.7 10.7 0 0 0 2.287 2.233c.346.244.652.42.893.533q.18.085.293.118a1 1 0 0 0 .101.025 1 1 0 0 0 .1-.025q.114-.034.294-.118c.24-.113.547-.29.893-.533a10.7 10.7 0 0 0 2.287-2.233c1.527-1.997 2.807-5.031 2.253-9.188a.48.48 0 0 0-.328-.39c-.651-.213-1.75-.56-2.837-.855C9.552 1.29 8.531 1.067 8 1.067c-.53 0-1.552.223-2.662.524zM5.072.56C6.157.265 7.31 0 8 0s1.843.265 2.928.56c1.11.3 2.229.655 2.887.87a1.54 1.54 0 0 1 1.044 1.262c.596 4.477-.787 7.795-2.465 9.99a11.8 11.8 0 0 1-2.517 2.453 7 7 0 0 1-1.048.625c-.28.132-.581.24-.829.24s-.548-.108-.829-.24a7 7 0 0 1-1.048-.625 11.8 11.8 0 0 1-2.517-2.453C1.928 10.487.545 7.169 1.141 2.692A1.54 1.54 0 0 1 2.185 1.43 63 63 0 0 1 5.072.56" />
                                <path d="M9.5 6.5a1.5 1.5 0 0 1-1 1.415l.385 1.99a.5.5 0 0 1-.491.595h-.788a.5.5 0 0 1-.49-.595l.384-1.99a1.5 1.5 0 1 1 2-1.415" />
                            </svg>
                        </svg>
                    </div>
                </div>
                <div class="row align-items-center p-2">
                    <p id="deleteMessage">Brak odpowiednich uprawnień do wykonania akcji. Skontaktuj się z administratorem strony</p>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Zamknij</button>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid col-xxxl-8 w-100 h-100 d-flex flex-column align-items-center justify-content-center" style="min-height: 80vh;">
    <div class="row align-items-center g-5 py-5">
        <div class="col-12 col-sm-12 col-lg-9 fadeToLeftClass">
            @if (@Model.IsVisableForUser || User.IsInRole("superuser") || User.IsInRole("admin"))
            {
                <img src="@Model.Url" class="d-block mx-lg-auto img-fluid" alt="Image" loading="lazy">
            }
            else // Adding blur and text in the middle of an Image
            {
                <div class="blurImageContainer position-relative">
                    <img src="@Model.Url" class="d-block mx-lg-auto img-fluid blurImage" alt="Image" loading="lazy">
                    <span class="textOverImage fw-bold d-flex container-fluid justify-content-center">Tylko dla upoważnionych</span>
                </div>
            }
        </div>
        <div class="col-lg-3 fadeToRightClass">
            <h1 class="display-6 fw-bold text-body-emphasis lh-1 mb-3">Informacje o zdjęciu</h1>
            <div class="row">
                <div class="col-md-6">
                    <h3 class="fw-normal text-muted mb-3"><i class="bi bi-card-text"></i> @Model.Name</h3>
                </div>
                <div class="col-md-6 text-md-end">
                    <h3 class="fw-normal text-muted mb-3"><i class="bi bi-justify"> </i> @description</h3>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <h3 class="fw-normal text-muted mb-3"><i class="bi bi-calendar-heart"></i> @imageDate</h3>
                </div>
                <div class="col-md-6 text-md-end">
                    <h3 class="fw-normal text-muted mb-3"><i class="bi bi-pin-map"></i> @imageCity</h3>
                </div>
            </div>

            <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                <a type="button" class="btn btn-outline-secondary px-2" onclick="history.back()">Wróć</a>
                <a type="button" class="btn btn-success px-3" asp-controller="Meeting" asp-action="Details" asp-route-id=@Model.MeetingId>Album ze spotkania</a>
                @if (User.Identity.IsAuthenticated && (User.IsInRole("admin") || User.IsInRole("superuser")))
                {
                    <a type="button" class="btn btn-primary px-3" asp-action="Edit" asp-route-id=@Model.Id>Edytuj</a>
                    <a type="button" class="btn btn-danger px-2" data-bs-toggle="modal" data-bs-target="#deleteModal" data-id="Id">Usuń</a>
                }
                else if (User.Identity.IsAuthenticated && !(User.IsInRole("admin") || User.IsInRole("superuser")))
                {
                    <button type="button" class="btn btn-primary px-3" data-bs-toggle="modal" data-bs-target="#permissionsModal">Edytuj</button>
                    <button type="button" class="btn btn-danger  px-3" data-bs-toggle="modal" data-bs-target="#permissionsModal">Usuń</button>
                }
                else
                {
                    <a asp-controller="Account" asp-action="Login" type="button" class="btn btn-primary px-3">Edytuj</a>
                    <a asp-controller="Account" asp-action="Login" type="button" class="btn btn-danger px-3">Usuń</a>
                }
            </div>
        </div>
    </div>
</div>



