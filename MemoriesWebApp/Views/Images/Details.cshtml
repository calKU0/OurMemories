@model MemoriesWebApp.Models.Image

@{
    ViewData["Title"] = "Details";
    string imageCity = !string.IsNullOrEmpty(Model.City) ? Model.City : Model.Meeting.MeetingCity.ToString();
    string imageDate = Model.Date != default ? Model.Date.ToShortDateString() : Model.Meeting.DateStart.ToShortDateString();
    string description = Model.Description ?? "opis";
}
<div class="modal fade" id="deleteModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="deleteModalLabel">Czy napewno chcesz usunąć zdjęcie?</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row align-items-center justify-content-center p-2">
                    <div class="col-auto">
                        <svg class="bi mt-2 mb-2" style="color: red;" width="50" height="50">
                            <svg xmlns="http://www.w3.org/2000/svg" width="50" height="50" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16" id="trash">
                                <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z" />
                                <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z" />
                            </svg>
                        </svg>
                    </div>
                </div>
                <div class="row align-items-center p-2">
                    <p id="deleteMessage">Jest to akcja <strong style="color:red">nieodwracalna</strong> i nie będzie można już przywrócić tego zdjęcia</p>
                </div>
            </div>
            <div class="modal-footer">
                <form id="deleteForm" asp-action="Delete" method="post">
                    <input type="hidden" asp-for="Id" />
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Zamknij</button>
                    <button type="submit" class="btn btn-danger">Usuń</button>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="position-relative overflow-hidden p-3 p-md-3 m-md-3 text-center bg-body-tertiary">
    <div class="col-md-5 p-lg-5 mx-auto my-4">
        <h1 class="display-3 fw-bold mb-5 ">Informacje o zdjęciu</h1>
        <div class="row">
            <div class="row">
                <div class="col-md-6">
                    <h3 class="fw-normal text-muted mb-3"><i class="bi bi-card-text"></i> @Model.Name</h3>
                </div>
                <div class="col-md-6">
                    <h3 class="fw-normal text-muted mb-3"><i class="bi bi-justify"> </i> @description</h3>
                </div>
            </div>
            <div class="col-md-6">
                <h3 class="fw-normal text-muted mb-3"><i class="bi bi-calendar-heart"></i> @imageDate</h3>
            </div>
            <div class="col-md-6">
                <h3 class="fw-normal text-muted mb-3"><i class="bi bi-pin-map"></i> @imageCity</h3>
            </div>
        </div>
    </div>
    <div class="d-flex gap-4 justify-content-center lead fw-normal">
        <a class="btn btn-outline-secondary rounded-pill px-5 me-1 btn-lg" type="button" onclick="history.back()">Wróć</a>
        <a class="btn btn-success rounded-pill px-5 me-1 btn-lg" type="button" asp-controller="Meeting" asp-action="Details" asp-route-id=@Model.MeetingId>Album ze spotkania</a>
        <a class="btn btn-primary rounded-pill px-5 me-1 btn-lg" type="button" asp-action="Edit" asp-route-id=@Model.Id>Edytuj</a>
        <a type="button" class="btn btn-danger rounded-pill px-5 me-1 btn-lg" data-bs-toggle="modal" data-bs-target="#deleteModal" data-id="Id">Usuń</a>

        <!--
        TODO: Make an Add button witch adds a new picture
        < class="btn btn-success rounded-pill px-2.5 me-1" type="button" asp-action="Add" asp-route-id="@Model.Id">Dodaj zdjęcie</a>
        -->
    </div>
</div>

<div class="bg-body-tertiary p-3 p-md-3 m-md-3 text-center overflow-hidden">
    <img src="@Model.Url" class="img-fluid" alt="Responsive image">
</div>