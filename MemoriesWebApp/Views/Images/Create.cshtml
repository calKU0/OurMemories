@model MemoriesWebApp.ViewModels.CreateImageViewModel

@{
    ViewData["Title"] = "Create";
}

<form method="post" class="needs-validation novalidate" asp-action="Create" enctype="multipart/form-data">
    <div class="form-group row">
        <label asp-for="Name" class="col-sm-2 col-form-label">Nazwa</label>
        <div class="col-sm-10">
            <input asp-for="Name" type="Name" class="form-control" id="Name" placeholder="Name" required>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row pt-3">
        <label asp-for="Description" class="col-sm-2 col-form-label">Opis</label>
        <div class="col-sm-10">
            <input asp-for="Description" type="Description" class="form-control" id="Description" placeholder="Opis">
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row pt-3">
        <label asp-for="City" class="col-sm-2 col-form-label">Miejsce</label>
        <div class="col-sm-10">
            <input asp-for="City" type="City" class="form-control" id="City" placeholder="Miejsce">
            <span asp-validation-for="City" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row pt-3">
        <label asp-for="Date" class="col-sm-2 col-form-label">Data</label>
        <div class="col-sm-10">
            <input asp-for="Date" type="Date" class="form-control" id="Date" placeholder="Data">
        </div>
    </div>
    <div class="form-group row pt-3">
        <label asp-for="MeetingId" class="col-sm-2 col-form-label">Numer spotkania</label>
        <div class="col-sm-10">
            <select asp-for="MeetingId" class="form-control" id="MeetingId" asp-items="ViewBag.MeetingId" required></select>
        </div>
    </div>
    <div class="form-group row pt-3">
        <label asp-for="Url" class="col-sm-2 col-form-label">Zdjęcie</label>
        <div class="col-sm-10">
            <input asp-for="Url" type="file" class="form-control" id="Url" required>
            <span asp-validation-for="Url" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row pt-3">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Dodaj</button>
        </div>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<script>
    (function () {
        'use strict';
        window.addEventListener('load', function () {
            var forms = document.getElementsByClassName('needs-validation');

            var validation = Array.prototype.filter.call(forms, function (form) {
                form.addEventListener('submit', function (event) {
                    if (form.checkValidity() === false) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        }, false);
    })();
</script>
